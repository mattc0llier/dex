{
  "manifest_version": 2,
  "name": "DEX",
  "description": "A simple application to track live cryptocurrency prices",
  "version": "1.0",
  "permissions": [
    "tabs",
    "bookmarks",
    "unlimitedStorage",
    "activeTab",
    "http://localhost:1234/"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
     "default_icon": "calendar-small.png",
     "default_title": "DEX"
  },
  "commands": {
    "update-context": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Send a 'context' event to the extension"
    }
  }
}
